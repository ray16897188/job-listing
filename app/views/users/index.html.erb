<div class="container"> 
  <h2>用户一览</h2>

    <div class="col-md-12">
  
      <table class="table table-hover">
        <thead>
          <tr>
           	  <td>用户邮箱</td>
           	  <td>操作</td>
           </tr>
        </thead>
    
        <tbody>
           <% @users.each do |user| %>
          		<tr>
           			<td><%= user.email %></td>

           			<td>
           				<%= link_to("加为好友", add_friend_user_path(user), method: :post, class: "btn btn-sm btn-default") %>
           			</td>

					
				</tr>
			<% end %>

         </tbody>

      </table>

    </div>
</div>

